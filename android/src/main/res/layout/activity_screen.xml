<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bj"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/head_image_id"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_marginTop="105dp"
        android:background="@mipmap/touxiang"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/name_text_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="方恒"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/head_image_id" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="邀请你体验VR带看"

        android:textColor="@android:color/white"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name_text_id" />

    <ImageView
        android:id="@+id/left_image_id"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginBottom="105dp"
        android:background="@mipmap/hulve"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/right_image_id" />

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:text="忽略"
        android:textColor="#60ffffff"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/right_image_id"
        app:layout_constraintTop_toBottomOf="@+id/left_image_id" />

    <ImageView
        android:id="@+id/right_image_id"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginBottom="105dp"
        android:textSize="12sp"
        android:background="@mipmap/daikan"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/left_image_id"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:text="立即带看"
        android:textSize="12sp"
        android:textColor="#60ffffff"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/left_image_id"
        app:layout_constraintTop_toBottomOf="@+id/right_image_id" />

</androidx.constraintlayout.widget.ConstraintLayout>